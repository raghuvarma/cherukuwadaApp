<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :event_on %><br>
    <%= f.datetime_select :event_on %>
  </div>
  <div class="field">
    <%= f.label :type %><br>
    <%= f.select :type, Event::TYPES %>
  </div>
  <div class="field">
    <%= f.label :is_repeated %><br>
    <%= f.check_box :is_repeated %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
